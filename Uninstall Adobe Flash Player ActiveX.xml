          <Script>$AllUsers = Get-ChildItem "C:\Users"
 
ForEach ( $UserDir in $AllUsers.FullName ) {

    ForEach ( $AppDataDir in "Local", "Roaming" ) {

        ForEach ( $FlashDir in "Flash", "Macromedia" ) {
        
            $FlashFullDir = "$UserDir\AppData\$AppDataDir\$FlashDir\Flash Player"
            if ( Test-Path "$FlashFullDir" ) {

                "Deleting --- $FlashFullDir"
                Remove-Item -Recurse -Force -Path "$FlashFullDir"

            }

        }

    }

}</Script>
